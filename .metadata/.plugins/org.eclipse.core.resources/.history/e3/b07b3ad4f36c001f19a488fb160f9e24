package 일차원배열;

import java.util.Scanner;

public class num10818 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		int N = sc.nextInt();
		
		int []arr = new int[N];
		
		for(int i=0; i<N ; i++) {
			arr[i] = sc.nextInt();
		}
		
		int max = 0;
		int min = 1000;
		for(int num : arr) {
			if(num > max) {
				max = num;
			}else {
				min = num;
			}
		}
		System.out.print((max) + (min));
	}

}
